<UserControl x:Class="shop_desktop.Views.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <!-- Formularz zgłaszania problemów i sugestii -->
        <Border x:Name="ContactFormBorder" BorderBrush="Gray" BorderThickness="1" Margin="10" Visibility="Visible">
            <StackPanel>
                <TextBlock Text="Zgłoś problem lub sugestię" FontWeight="Bold" Margin="5"/>
                <!-- Informacja pomocnicza -->
                <TextBlock Text="Opisz problem lub sugestię" FontStyle="Italic" Margin="5"/>
                <!-- Pole tekstowe -->
                <TextBox x:Name="IssueTextBox" Width="250" Height="100" Margin="5"/>
                <Button Content="Wyślij" Click="SendIssueButton_Click" Margin="5"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
