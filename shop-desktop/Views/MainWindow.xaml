<Window x:Class="shop_desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:shop_desktop.ViewModels"
        Title="Shop" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Image Source="D:\\shop-desktop\\shop-desktop\\shop-desktop\\logo.JPG" Width="300" Height="50" Margin="5"/>
            <TextBlock Text="Portal Sprzedażowy" VerticalAlignment="Center" Margin="5" FontSize="20"/>
            <Button Content="Login" Command="{Binding LoginCommand}" Margin="5"/>
            <Button Content="Register" Command="{Binding RegisterCommand}" Margin="5"/>
            <Button Content="Skip Login" Command="{Binding SkipLoginCommand}" Margin="5"/>
            <Button Content="Add Post" Command="{Binding AddPostCommand}" Margin="5"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="searchTextBox" Width="200" Margin="0,0,10,0" Text="Wpisz wyszukiwaną frazę..." />
            <Button Content="Szukaj" Command="{Binding SearchCommand}" CommandParameter="{Binding Text, ElementName=searchTextBox}" />
        </StackPanel>
        <ListView x:Name="PostsListView" ItemsSource="{Binding Posts}" MouseDoubleClick="PostsListView_MouseDoubleClick" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Author" DisplayMemberBinding="{Binding Author}" />
                    <GridViewColumn Header="Content" DisplayMemberBinding="{Binding Content}" Width="200" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
