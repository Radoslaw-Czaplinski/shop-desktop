<Window x:Class="shop_desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shop" Height="350" Width="525">
    <Grid Background="LightGray">
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
            <Button Content="Login" Click="Login_Click"/>
            <Button Content="Register" Click="Register_Click"/>
            <Button Content="Skip Login" Click="SkipLogin_Click"/>
            <Button Content="Add Post" Click="AddPostButton_Click"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="Blue">Shop Desktop</TextBlock>
        <ListBox x:Name="postListBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="200">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Body}" TextWrapping="Wrap"/>
                        <Separator/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>

