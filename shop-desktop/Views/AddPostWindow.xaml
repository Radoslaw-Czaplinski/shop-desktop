<Window x:Class="shop_desktop.Views.AddPostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Post" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Title:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>
        <Label Content="Content:" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="ContentTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Height="100" TextWrapping="WrapWithOverflow"/>
        <Label Content="Author:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="AuthorTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Add Post" Margin="10" Click="AddButton_Click"/>
            <Button Content="Cancel" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
